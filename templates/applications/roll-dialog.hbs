<div autocomplete="off" spellcheck="off">
    <div class="form-group">
        <label>{{localize "RSK.Skill"}}</label>
        <select class="selectedSkill" name="selectedSkill">
            {{#select selectedSkill}}
            {{#each skills as |skill|}}
            <option value="{{skill.index}}">{{skill.label}}</option>
            {{/each}}
            {{/select}}
        </select>
    </div>
    <div class="form-group">
        <label>{{localize "RSK.Ability"}}</label>
        <select class="selectedAbility" name="selectedAbility">
            {{#select selectedAbility}}
            {{#each abilities as |ability|}}
            <option value="{{ability.index}}">{{ability.label}}</option>
            {{/each}}
            {{/select}}
        </select>
    </div>
    <div class="form-group">
        <label>{{localize "RSK.AdvantageDisadvantageLabel"}}</label>
        <select class="advantageDisadvantage" name="advantageDisadvantage">
            {{#select advantageDisadvantage}}
            {{#each advantageDisadvantageOptions as |label opt|}}
            <option value="{{opt}}">{{localize label}}</option>
            {{/each}}
            {{/select}}
        </select>
    </div>
    <div class="form-group">
        <label>{{localize "RSK.TargetNumberModifier"}}</label>
        <input class="targetNumberModifier" type="number" name="targetNumberModifier" value="{{targetNumberModifier}}">
    </div>
    <hr />
    <div class="form-group">
        <label>{{localize "RSK.RollModeLabel"}}</label>
        <select class="rollMode" name="rollMode">
            {{#select rollMode}}
            {{#each rollModes as |label mode|}}
            <option value="{{mode}}">{{localize label}}</option>
            {{/each}}
            {{/select}}
        </select>
    </div>
</div>