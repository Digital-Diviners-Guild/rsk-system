{{#if label}}
<p>{{label}}</p>
{{else}}
<p>{{name}}</p>
{{/if}}

{{#if img}}
<img src="{{img}}" data-edit="img" title="{{name}}" height="32" width="32" />
{{/if}}

{{#if description}}
<p>{{description}}</p>
{{/if}}
{{#if effectDescription}}
<p>{{effectDescription}}</p>
{{/if}}
{{#if specialEffects}}
<p>{{specialEffects}}</p>
{{/if}}