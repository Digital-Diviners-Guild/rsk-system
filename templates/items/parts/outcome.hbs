<div>
    <div class="form-group">
        <label>{{localize "RSK.RestoresLifePoints"}}:
            <input type="number" min="1" name="system.{{outcomeName}}.restoresLifePoints"
                value="{{outcome.restoresLifePoints}}">
        </label>
    </div>
    <div>
        <label>{{localize "RSK.StatusesAdded"}}:</label>
        <div>
            <ol class="items-list" data-outcome="{{outcomeName}}">
                {{#each outcome.statusesAdded as |status|}}
                <li class="item flexrow" data-name="{{status.name}}">
                    {{status.name}}
                    <div class=" item-controls">
                        <a class="item-control remove-status" title="Delete Status"><i class="fas fa-trash"></i></a>
                    </div>
                </li>
                {{/each}}
            </ol>
            <div class="form-group">
                <label>{{localize "RSK.Name"}}
                    <select id="new-status-name-{{outcomeName}}">
                        {{selectOptions config.statusEffects localize=true}}
                    </select>
                </label>
                <label>{{localize "RSK.Duration"}}
                    <input type="number" id="new-status-duration-{{outcomeName}}">
                </label>
                <a class="item-control add-status-{{outcomeName}}" title="add status effect">
                    <i class="fas fa-plus"></i> {{localize "RSK.Add"}}
                </a>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label>{{localize "RSK.StatusesRemoved"}}:</label>
        <div>
            <ol class="items-list" data-outcome="{{outcomeName}}">
                {{#each outcome.statusesRemoved as |status|}}
                <li class="item flexrow" data-name="{{status}}">
                    {{status}}
                    <div class=" item-controls">
                        <a class="item-control remove-remove-status" title="Delete Status Removal"><i
                                class="fas fa-trash"></i></a>
                    </div>
                </li>
                {{/each}}
            </ol>
            <div class="form-group">
                <label>{{localize "RSK.Name"}}:
                    <select id="new-status-remove-name-{{outcomeName}}">
                        {{selectOptions config.statusEffects localize=true}}
                    </select>
                </label>
                <a class="item-control add-remove-status-{{outcomeName}}" title="add remove status effect">
                    <i class="fas fa-plus"></i> {{localize "RSK.Add"}}
                </a>
            </div>
        </div>
    </div>

    {{localize "RSK.Damage"}}
    <div class="form-group">
        <div>
            <label>{{localize "RSK.Stab"}}
                <input type="number" name="system.{{outcomeName}}.damageEntries.stab"
                    value="{{outcome.damageEntries.stab}}">
            </label>
        </div>
        <div>
            <label>{{localize "RSK.Slash"}}
                <input type="number" name="system.{{outcomeName}}.damageEntries.slash"
                    value="{{outcome.damageEntries.slash}}">
            </label>
        </div>
        <div>
            <label>{{localize "RSK.Crush"}}
                <input type="number" name="system.{{outcomeName}}.damageEntries.crush"
                    value="{{outcome.damageEntries.crush}}">
            </label>
        </div>
        <div>
            <label>{{localize "RSK.Air"}}
                <input type="number" name="system.{{outcomeName}}.damageEntries.air"
                    value="{{outcome.damageEntries.air}}">
            </label>
        </div>
        <div>
            <label>{{localize "RSK.Water"}}
                <input type="number" name="system.{{outcomeName}}.damageEntries.water"
                    value="{{outcome.damageEntries.water}}">
            </label>
        </div>
        <div>
            <label>{{localize "RSK.Earth"}}
                <input type="number" name="system.{{outcomeName}}.damageEntries.earth"
                    value="{{outcome.damageEntries.earth}}">
            </label>
        </div>
        <div>
            <label>{{localize "RSK.Fire"}}
                <input type="number" name="system.{{outcomeName}}.damageEntries.fire"
                    value="{{outcome.damageEntries.fire}}">
            </label>
        </div>
    </div>
</div>