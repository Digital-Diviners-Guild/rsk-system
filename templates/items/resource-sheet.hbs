<form class="{{cssClass}}" autocomplete="off">
    <header class="sheet-header">
        <img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64" />
        <h1><input type="text" name="name" value="{{item.name}}" placeholder="Name"></h1>
    </header>

    <label>Uses</label>
    <input name="system.uses" type="text" value="{{system.uses}}">

    <label>Effects</label>
    <input name="system.effects" type="text" value="{{system.effects}}">

    <label>Cost</label>
    <input name="system.cost" type="number" value="{{system.cost}}">

    {{log item}}
</form>