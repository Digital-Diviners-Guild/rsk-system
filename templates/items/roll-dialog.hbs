<form autocomplete="off" spellcheck="off">
    <div class="form-group">
        <label>{{localize "RSK.TestNumber"}}</label>
        <input class="test-number" type="number" name="testNumber" value="{{testNumber}}" placeholder="{{localize "
            RSK.TestNumber"}}" />
    </div>
    <div class="form-group">
        <label>{{localize "RSK.RollModeLabel"}}</label>
        <select name="rollMode">
            {{#select rollMode}}
            {{#each rollModes as |label mode|}}
            <option value="{{mode}}">{{localize label}}</option>
            {{/each}}
            {{/select}}
        </select>
    </div>
    <button class="roll" type="button"><i class="fas fa-dice">{{localize "RSK.Roll"}}</i></button>
</form>