            {{/if}}
        </div>
        <div class="item-controls">
            <a class="item-control item-equip" data-tooltip="{{localize " RSK.EquipItem"}}"><i
                    class="fas fa-shirt"></i></a>
            <a class="item-control chat-item" data-item-type="{{equippable.type}}" data-item-id="{{equippable._id}}"
                data-tooltip="{{localize " RSK.ChatItem"}}">
                <i class="fas fa-message"></i>
            </a>
            <a class="item-control item-delete" data-tooltip="{{localize " RSK.RemoveItem"}}"><i
