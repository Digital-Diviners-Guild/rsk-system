<header>
    <h3 class="item-name">{{localize "RSK.Inventory"}} ({{usedSlots}} / 28)</h3>
    <div class="item-quantity">Qty.</div>
    <div class="item-controls">
        <a data-action="browse-equipment" data-tooltip="Search Inventory"><i class="fa-solid fa-fw fa-search"></i></a>
    </div>
</header>
{{!-- todo: clean this up --}}
<ul class="items-list">
    {{#each consumables as |consumable|}}
    <li class="item" data-item-id="{{consumable._id}}">
        <div class="item-name">
            <img src="{{consumable.img}}" data-tooltip="{{consumable.name}}">
            <h4><a data-action="toggle-summary" data-toggle="{{consumable._id}}">{{consumable.name}}</a></h4>
        </div>
        <div class="item-quantity">
            {{#if consumable.system.quantity}}
            <a class="item-control decrease-item-quantity" data-item-id="{{consumable.id}}">-</a>
            <span>{{consumable.system.quantity}}</span>
            <a class="item-control increase-item-quantity" data-item-id="{{consumable.id}}">+</a>
            {{/if}}
        </div>
        <div class="item-controls">
            <a class="item-control item-consume" data-tooltip="{{localize " RSK.ConsumeItem"}}"><i
                    class="fas fa-meat"></i></a>
            <a class="item-control chat-item" data-item-type="{{consumable.type}}" data-item-id="{{consumable._id}}"
                data-tooltip="{{localize " RSK.ChatItem"}}">
                <i class="fas fa-message"></i>
            </a>
            <a class="item-control item-delete" data-tooltip="{{localize " RSK.RemoveItem"}}"><i
                    class="fas fa-trash"></i></a>
        </div>
        <div class="item-summary" hidden="hidden" data-toggle-target="{{consumable._id}}"
            data-toggle-target="{{consumable._id}}">
            {{#if consumable.system.description}}
            <div class="item-content">
                {{consumable.system.description}}
            </div>
            {{/if}}
        </div>
    </li>
    {{/each}}

