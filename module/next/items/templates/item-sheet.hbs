<form class="{{cssClass}}">
    <div class="item-details">
        <h3>Item Details</h3>
        <label>Name: <input type="text" name="item.name" value="{{item.name}}"></label>
        <label>Material: <input type="text" name="system.material" value="{{system.material}}"></label>
        <label>Cost: <input type="number" name="system.cost" value="{{system.cost}}"></label>
        <label>Uses: <input type="text" name="system.uses" value="{{system.uses}}"></label>
        <label>Location: <input type="text" name="system.location" value="{{system.location}}"></label>
        <label>Description: <input type="text" name="system.description" value="{{system.description}}"></label>
        <label>Effect Description: <input type="text" name="system.effectDescription"
                value="{{system.effectDescription}}"></label>
        <label>Awarded For: <input type="text" name="system.awardedFor" value="{{system.awardedFor}}"></label>
        <label>Equipment Needed: <input type="text" name="system.equipmentNeeded"
                value="{{system.equipmentNeeded}}"></label>
        <label>Soak Value: <input type="number" name="system.soakValue" value="{{system.soakValue}}"></label>
        <label>Target Number Modifier: <input type="number" name="system.targetNumberModifier"
                value="{{system.targetNumberModifier}}"></label>
        <label>Weapon Type: <input type="text" name="system.weaponType" value="{{system.weaponType}}"></label>
        <label>Ammo Type: <input type="text" name="system.ammoType" value="{{system.ammoType}}"></label>
        <label>Max Stack Size: <input type="number" name="system.maxStackSize" value="{{system.maxStackSize}}"></label>
        <label>Quantity: <input type="number" name="system.quantity" value="{{system.quantity}}"></label>
        <label>Active Slot: <input type="text" name="system.activeSlot" value="{{system.activeSlot}}"></label>
        <label>Equipped In Slot: <input type="text" name="system.equippedInSlot"
                value="{{system.equippedInSlot}}"></label>
        <label>Is Two-Handed: <input type="checkbox" name="system.isTwoHanded" {{#if
                isTwoHanded}}checked{{/if}}></label>
        <fieldset>
            <legend>Bulk</legend>
            <label>Value: <input type="number" name="system.bulk.value" value="{{system.bulk.value}}"></label>
            <label>Modifier: <input type="number" name="system.bulk.modifier" value="{{system.bulk.modifier}}"></label>
        </fieldset>
    </div>

    <h4>Damage Entries</h4>
    <ol class="items-list">
        {{#each system.damageEntries as |damageEntry|}}
        <li class="item flexrow" data-type="{{damageEntry.type}}">
            {{damageEntry.type}}:
            {{damageEntry.amount}}
            <div class="item-controls ml-1">
                <a class="item-control remove-damage" title="{{localize " RSK.RemoveDamage"}}"><i
                        class="fas fa-trash"></i></a>
            </div>
        </li>
        {{/each}}
    </ol>
    {{!-- todo: we could have this be a dialog that we pop up on add clicked
    or hidden and show when needed.  --}}
    <div>
        <label>{{localize "RSK.DamageType"}}</label>
        <select id="type">
            {{selectOptions config.damageTypes localize=true}}
        </select>
    </div>
    <div>
        <label>{{localize "RSK.Amount"}}</label>
        <input id="amount" type="number">
    </div>
    <a class="item-control add-damage" title="{{localize " RSK.AddDamage"}}">
        <i class="fas fa-plus"></i> {{localize "RSK.AddDamage"}}
    </a>

    {{!-- todo: --}}
    <h4>Required Materials</h4>

    <h4>Qualities</h4>

    <h4>Usage Cost</h4>

    <h4>Targets</h4>

    {{!-- todo: in the base item this will be outcomes, though with other types it would be 
    additional outcomes? --}}
    {{!-- {{> "/systems/lab/templates/parts/outcome.hbs" group="usage" changes=usageOutcomes}}
    {{> "/systems/lab/templates/parts/outcome.hbs" group="target" changes=targetOutcomes}} --}}
</form>